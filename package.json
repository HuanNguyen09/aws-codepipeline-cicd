{
  "name": "code_pipeline",
  "version": "0.2.0",
  "bin": {
    "sc": "bin/code_pipeline.js"
  },
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "test": "jest",
    "cdk": "cdk",
    "eslint": "eslint . --ext .ts --max-warnings 0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^20.12.12",
    "aws-cdk": "^2.142.0",
    "eslint": "^9.2.0",
    "jest": "^29.7.0",
    "jest-junit": "^16.0.0",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "typescript": "~5.4.5"
  },
  "dependencies": {
    "aws-cdk-lib": "^2.142.0",
    "constructs": "^10.3.0",
    "source-map-support": "^0.5.21"
  },
  "jest": {
    "collectCoverage": true,
    "roots": [
      "<rootDir>/test"
    ],
    "reporters": [
      "default",
      [
        "jest-junit",
        {
          "outputName": "test-report.xml"
        }
      ]
    ],
    "testEnvironment": "node",
    "testMatch": [
      "**/*.test.ts"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    }
  }
}
